<!DOCTYPE html>
<html>
  <head>
    <title>Books Online Store</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller.controller_name%>">

    <div id="banner">
      <%= image_tag  "test.png", alt: "The Pragmatic Bookshelf" %>
    </div>

    <div id="columns">
      <div id="side">
        <ul>
          <li>Home</li>
          <li>Questions</li>
          <li>News</li>
          <li>Contact</li>
        </ul>
      </div>
    </div>

    <div id="main">
      <%= yield %>
    </div>

  </body>
</html>
