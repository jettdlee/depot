<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <% @products.each do |p| %>
    <tr class="<%= cycle('list_line_odd','list_line_even')%>">

    <td>
      <%= image_tag(p.image_url, class: 'list_image')%>
    </td>

    <td class='list_description'>
      <dl>
        <dt><%= p.title %></dt>
        <dd><%= truncate(strip_tags(p.description), length:80) %></dd>
      </dl>
    </td>

    <td class="list_actions">
      <%= link_to 'Show', p %>
      <%= link_to 'Edit', edit_product_path(p) %>
      <%= link_to 'X', p, method: :delete, data: {confirm: "delete?"} %>
    </td>


    </tr>


  <% end %>

</table>

<br>

<%= link_to 'New Product', new_product_path %>
